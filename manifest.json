{
    "name": "Text Summarizer",
    "version": "1.0",
    "description": "Right-click to summarize selected text via OpenAI",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "contextMenus",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://api.openai.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "settings/settings.html",
    "default_locale": "en"
}